<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="borrow_report_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="text-center">
                        <h2>LAPORAN REKAP PEMINJAMAN DAN PENGEMBALIAN BARANG</h2>
                    </div>

                    <div class="row mt-3 mb-3">
                        <div class="col-6">
                            <strong>Dari Tanggal: </strong> <span t-esc="start_date"/>
                        </div>
                        <div class="col-6 text-right">
                            <strong>Hingga Tanggal: </strong> <span t-esc="end_date"/>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-6">
                            <strong>Partner Filter: </strong> <span t-esc="partner_name_filter"/>
                        </div>
                        <div class="col-6 text-right">
                            <strong>Dicetak Pada: </strong> <span t-esc="current_datetime"/> </div>
                    </div>

                    <t t-if="not report_output">
                        <p class="text-center">Tidak ada data transaksi ditemukan dalam periode ini dengan filter yang dipilih.</p>
                    </t>
                    <t t-else="">
                        <t t-foreach="report_output" t-as="partner_group">
                            <h4 class="mt-4">Partner: <span t-esc="partner_group['partner_name']"/></h4>
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr class="table-active">
                                        <th class="text-left">No.</th>
                                        <th class="text-left">Nama Barang</th>
                                        <th class="text-right">Total Qty Pinjam</th>
                                        <th class="text-right">Total Qty Kembali</th>
                                        <th class="text-left">Satuan</th>
                                        <th class="text-right">Sisa Pinjam</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="product_num" t-value="1"/>
                                    <t t-foreach="partner_group['products']" t-as="product_line">
                                        <tr>
                                            <td><span t-esc="product_num"/></td>
                                            <td><span t-esc="product_line['product_name']"/></td>
                                            <td class="text-right">
                                                <span t-esc="product_line['total_borrowed_qty']"
                                                    t-options='{"widget": "float", "precision": 0}'/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="product_line['total_returned_qty']"
                                                    t-options='{"widget": "float", "precision": 0}'/>
                                            </td>
                                            <td><span t-esc="product_line['uom_name']"/></td>
                                            <td class="text-right">
                                                <span t-esc="product_line['total_borrowed_qty'] - product_line['total_returned_qty']"
                                                    t-options='{"widget": "float", "precision": 0}'/>
                                            </td>
                                        </tr>
                                        <t t-set="product_num" t-value="product_num+1"/>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>