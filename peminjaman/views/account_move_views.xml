<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_form_inherit_borrow_return_flags" model="ir.ui.view">
        <field name="name">account.move.form.inherit.borrow.return.flags</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="is_peminjaman" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                <field name="is_pengembalian" attrs="{'readonly': [('state', '!=', 'draft')]}" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']"
                position="before">
                <field name="is_peminjaman_line" invisible="1" />
                <field name="is_pengembalian_line" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']"
                position="attributes">
                <attribute name="attrs">{'readonly': ['|', ('parent.is_peminjaman', '=', True),
                    ('parent.is_pengembalian', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']"
                position="attributes">
                <attribute name="attrs">{'readonly': ['|', ('parent.is_peminjaman', '=', True),
                    ('parent.is_pengembalian', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>