<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_return" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.return</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pricelist_id']" position="after">
                <field name="is_pengembalian" readonly="1" />
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']"
                position="before">
                <field name="is_pengembalian_line" invisible="1" />
            </xpath>
        </field>
    </record>
</odoo>