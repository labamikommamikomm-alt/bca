<odoo>
  <data>
    <!-- Inherit stock valuation -->
    <record id="stock_valuation_form_view_inherit_uom" model="ir.ui.view">
      <field name="name">Inherit Stock Valuation</field>
      <field name="model">stock.valuation.layer</field>
      <field name="inherit_id" ref="stock_account.stock_valuation_layer_form" />
      <field name="arch" type="xml">
        <field name="uom_id" position="after">
          <field name="multi_uom_quant" />
        </field>
      </field>
    </record>

    <record id="stock_valuation_tree_view_inherit_uom" model="ir.ui.view">
      <field name="name">Inherit Stock Valuation Tree</field>
      <field name="model">stock.valuation.layer</field>
      <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree" />
      <field name="arch" type="xml">
        <field name="uom_id" position="after">
          <field name="multi_uom_quant" />
        </field>
      </field>
    </record>
  </data>
</odoo>