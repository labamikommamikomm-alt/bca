<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="breeze_distribution_inherit_purchase_order_form" model="ir.ui.view">
        <field name="name">Breeze Distribution Inherit Purchase Order Form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_ref" position="after">
                <field name="prepaid" />
                <field name="prepaid_bill" context = "{'special_display_name':True}" attrs="{'invisible': [('prepaid', '=', False)], 'required':[('prepaid', '=', True)]}" />
            </field>
        </field>
    </record>
</odoo>