<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <data>
    <record id="account_view_move_form_inherit" model="ir.ui.view">
      <field name="name">model.name.view.form.inherit</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='button_draft']" position="after">
          <button name="generateGlobalTaxes" type="object" string="Buat Pajak Global" class="oe_highlight" attrs="{'invisible': [('type','!=','sale')]}"/>
        </xpath>
        <notebook position="inside">
          <page name="Global taxes" string="Global Taxes" attrs="{'invisible': [('type','!=','sale')]}">
            <field name="global_tax_ids">
              <tree editable="top">
                <field name="global_tax_id" />
                <field name="amount" />
              </tree>
            </field>

          </page>
        </notebook>

        <div name="journal_div" position="after">
          <field name="tanggal_faktur" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))]}"/>
          <field name="payment_state" invisible="1" />
          <field name="type" invisible="1" />
        </div>
      </field>
    </record>

    <record id="inherit_account_move_efaktur_tree_view" model="ir.ui.view">
      <field name="name">account.move.efaktur.tree.view</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_invoice_tree"/>
      <field name="arch" type="xml">
        <field name="ref" position="after">
          <field name="invoice_line_ids" optional="show" domain="[('product_id','=', True)]"/>
        </field>
      </field>
    </record>

  </data>


</odoo>
