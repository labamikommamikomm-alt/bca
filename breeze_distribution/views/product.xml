<odoo>
  <data>
    <!-- Inherit product view -->
    <record id="product_template_form_view_inherit_uom" model="ir.ui.view">
      <field name="name">Inherit Product UoM</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view" />
      <field name="arch" type="xml">
        <field name="uom_id" position="replace">
          <field name="uom_id" groups="uom.group_uom" options="{'no_create': True}" attrs="{'invisible': [('multi_uom_enabled', '=', True)]}" />
        </field>
        <field name="uom_id" position="before">
          <field name="multi_uom_enabled" />
          <field name="multi_uom_category_id" attrs="{'invisible': [('multi_uom_enabled', '!=', True)], 'required': [('multi_uom_enabled', '=', True)]}"/>
        </field>
        <field name="uom_po_id" position="replace">
          <field name="uom_po_id" groups="uom.group_uom" options="{'no_create': True}" attrs="{'invisible': [('multi_uom_enabled', '=', True)]}" />
        </field>
        <page name="general_information" position="inside">
          <p>Multi UoM</p>
          <field name="multi_uom_ids" 
          attrs="{'invisible': [('multi_uom_enabled', '!=', True)]}"
          context="{'product_id': id}" >
            <tree string="Multi UoM" editable="top">
              <field name="warehouse_id" />
              <field name="uom_id" />
              <field name="qty" />
              <field name="product_uom_category_id" invisible="1" />
            </tree>
          </field>
        </page>
      </field>
    </record>
    
    <record id="inherit_view_id_inherit_harga_akhir" model="ir.ui.view">
      <field name="name">product.template.view.form.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <field name="barcode" position="after">
          <field name="harga_terakhir"/>
        </field>
      </field>
    </record>

    <record id="inherit_product_supplierinfo_tree_view" model="ir.ui.view">
      <field name="name">product.supplierinfo.view.tree.inherit_view</field>
      <field name="model">product.supplierinfo</field>
      <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
      <field name="arch" type="xml">
        
        <field name="delay" position="after">
        <field name="date_purchase"></field>

        </field>
      </field>
    </record>
  </data>
</odoo>