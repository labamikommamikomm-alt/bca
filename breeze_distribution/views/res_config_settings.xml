<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.breeze_distribution</field>
        <field name="model">res.config.settings</field>
        <!-- <field name="priority" eval="15"/> -->
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="default_taxes" position="after">
                <div class="col-12 col-lg-6 o_setting_box"
                    id="vies_service_setting"
                    title="If this checkbox is ticked, all the active global taxes will be enabled">
                    <div class="o_setting_left_pane">
                        <field name="global_taxes"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="global_taxes"/>
                        <div class="text-muted">
                           Enable active global taxes
                        </div>
                        <div class="content-group" attrs="{'invisible': [('global_taxes','=',False)]}">
                            <div class="mt8">
                                <button name="%(breeze_distribution.global_tax_action)d" icon="fa-arrow-right" type="action" string="Global Taxes" class="btn-link"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
