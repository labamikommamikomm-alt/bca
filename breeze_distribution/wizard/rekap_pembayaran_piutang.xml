<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="report_rekap_pembayaran_piutang_view" model="ir.ui.view">
        <field name="name">Rekap Pembayaran Piutang</field>
        <field name="model">report.rekap_pembayaran_piutang</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group col="4">
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="check_report" string="Print" type="object" default_focus="1"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_pembayaran_piutang_menu" model="ir.actions.act_window">
        <field name="name">Rekap Pembayaran Piutang</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.rekap_pembayaran_piutang</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_rekap_pembayaran_piutang_view"/>
        <field name="target">new</field>
    </record>

    <menuitem
            id="menu_pembayaran_piutang"
            name="Rekap Pembayaran Piutang"
            sequence="10"
            parent="breeze_distribution.menu_finance_atmu_reports"
            action="action_pembayaran_piutang_menu"
            groups="account.group_account_user,account.group_account_manager"
    />

</odoo>