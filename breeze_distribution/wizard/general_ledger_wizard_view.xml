<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_custom_general_ledger_wizard_form" model="ir.ui.view">
            <field name="name">general.ledger.wizard.form</field>
            <field name="model">general.ledger.wizard</field>
            <field name="arch" type="xml">
                <form string="Filter Laporan Buku Besar">
                    <group>
                        <group>
                            <field name="date_from" />
                            <field name="date_to" />
                        </group>
                        <group>
                            <field name="account_ids" widget="many2many_tags"
                                options="{'no_create_edit': True}" />
                            <field name="journal_ids" widget="many2many_tags"
                                options="{'no_create_edit': True}" />
                        </group>
                    </group>
                    <footer>
                        <button name="generate_report" string="Tampilkan Laporan" type="object"
                            class="btn-secondary" />
                        
                        <button name="export_report" string="Export (CSV)" type="object"
                            class="btn-primary" />
                            
                        <button string="Batal" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_custom_general_ledger_wizard" model="ir.actions.act_window">
            <field name="name">Laporan Buku Besar</field>
            <field name="res_model">general.ledger.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        <menuitem
            id="menu_custom_general_ledger_report"
            name="Laporan Buku Besarr"
            action="action_custom_general_ledger_wizard"
            parent="account.menu_finance_reports"
            sequence="100" />
            
    </data>
</odoo>
