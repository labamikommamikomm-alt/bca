<odoo>
    <template id="report_stock_by_period_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <h3>LAPORAN HASIL STOCK OPNAME</h3>
                        <h4>
                        	PT. BERKAH CENTRAL ALKESTRON
                        </h4>
                        <p>Periode: <span t-esc="start_date" t-options='{"widget": "date", "format": "dd/MM/yyyy"}'/> s.d. <span t-esc="end_date" t-options='{"widget": "date", "format": "dd/MM/yyyy"}'/></p>
                    </div>
                    
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr class="text-center">
                                <th>NAMA BARANG</th>
                                <th>SATUAN</th>
                                <th>SO AWAL</th>
                                <th>IN</th>
                                <th>OUT</th>
                                <th>SALDO AKHIR</th>
                                <th>SO FISIK</th>
                                <th>SELISIH</th>
                                <th>HARGA BELI</th>
                                <th>JUMLAH SALDO</th>
                                <th>JUMLAH SELISIH</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="report_lines" t-as="line">
                                <tr>
                                    <td><span t-esc="line['name']"/></td>
                                    <td class="text-center"><span t-esc="line['satuan']"/></td>
                                    <td class="text-right">
                                        <t t-if="isinstance(line['so_awal'], str)">
                                            <span>-</span>
                                        </t>
                                        <t t-else="">
                                            <span t-esc="line['so_awal']" t-options='{"widget": "float", "precision": 2}'/>
                                        </t>
                                    </td>
                                    <td class="text-right"><span t-esc="line['in_qty']" t-options='{"widget": "float", "precision": 2}'/></td>
                                    <td class="text-right"><span t-esc="line['out_qty']" t-options='{"widget": "float", "precision": 2}'/></td>
                                    <td class="text-right"><span t-esc="line['saldo_akhir']" t-options='{"widget": "float", "precision": 2}'/></td>
                                    <td class="text-right"><span t-esc="line['so_fisik']" t-options='{"widget": "float", "precision": 2}'/></td>
                                    <td class="text-right"><span t-esc="line['selisih']" t-options='{"widget": "float", "precision": 2}'/></td>
                                    <td class="text-right"><span t-esc="line['harga_beli']" t-options='{"widget": "float", "precision": 2}'/></td>
                                    <td class="text-right"><span t-esc="line['jumlah_saldo']" t-options='{"widget": "float", "precision": 2}'/></td>
                                    <td class="text-right"><span t-esc="line['jumlah_selisih']" t-options='{"widget": "float", "precision": 2}'/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
    
    <record id="action_report_stock_by_period" model="ir.actions.report">
        <field name="name">Stock Report by Period</field>
        <field name="model">product.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">breeze_distribution.report_stock_by_period_template</field>
        <field name="report_file">breeze_distribution.report_stock_by_period_template</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
