<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="report_hutang_pembelian">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">
          <div class="text-center">
            <h2>REKAP HUTANG</h2>
          </div>
          <div name="header" class="row">
            <!-- <t t-foreach='docs' t-as="o"> -->
              <div class="col-auto">
                <p>Tanggal : <span t-esc="docs[-1].invoice_date.strftime('%d/%m/%Y ')"/> sd 
                <span t-esc="docs[0].invoice_date.strftime('%d/%m/%Y ')"/> 
                </p>
              </div>
              <div class="col-auto">
              </div>
              <div class="col-auto">
                <p>
                  <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y ')"/>
                </p>
              </div>
            <!-- </t> -->
          </div>
          <div name="tabel" class="row">
            <table class="table table-sm table-bordered">
              <thead class="table-primary">
                <tr>
                  <th name="th_no" scope="col">No</th>
                  <th name="th_tanggal_faktur" scope="col">Tanggal Faktur</th>
                  <th name="th_nomor_faktur" scope="col">Nomor Faktur</th>
                  <th name="th_nama_suplier" scope="col">Nama Suplier</th>
                  <th name="th_jumlah" scope="col">Jumlah</th>
                </tr>
              </thead>
              <tbody>
                <t t-set="no" t-value="1"/>
                <t t-foreach='docs' t-as="o">
                  <tr>
                    <td>
                      <span t-esc="no"/>
                    </td>
                    <td>
                      <span t-esc="o.invoice_date.strftime('%d/%m/%Y ')"/>
                    </td>
                    <td>
                      <span t-esc="o.name"/>
                    </td>
                    <td>
                      <span t-esc="o.partner_id.name"/>
                    </td>
                    <td>
                      <span t-esc="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                  </tr>
                  <t t-set="no" t-value="no+1"/>
                </t>
              </tbody>
            </table>
          </div>
        </div>
      </t>
    </t>

  </template>

</odoo>
