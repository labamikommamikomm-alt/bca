<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="report_rekap_hutang">
    <t t-call="web.html_container">
      <t t-set="data_report_margin_top" t-value="5"/>
      <t t-set="data_report_header_spacing" t-value="50"/>
      <t t-set="data_report_dpi" t-value="110"/>
      <t t-call="web.internal_layout">
        <div class="page">
          <div class="text-center">
            <h3><span t-esc="company_name"/></h3>
          </div>
          <div class="text-center">
            <h2>REKAP HUTANG</h2>
          </div>
          <div name="header" class="row">
            <div class="col-auto">
              <p>Tanggal : <span t-esc="data['date_from']" t-options='{"widget": "date","format": "dd/MM/yyyy"}'/>
 sd 
              <span t-esc="data['date_to']" t-options='{"widget": "date","format": "dd/MM/yyyy"}'/>
            </p>
          </div>
          <div class="col-auto">
          </div>
          <div class="col-auto">
            <p>
              <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/>
            </p>
          </div>
          <!-- </t> -->
        </div>
        <div name="tabel" class="row">
          <table class="table table-sm table-bordered">
            <thead class="table-primary">
              <tr>
                <th name="th_no" scope="col">No</th>
                <th name="th_tanggal_faktur" scope="col">Tanggal Faktur</th>
                <th name="th_nomor_faktur" scope="col">Nomor Faktur</th>
                <th name="th_nama_suplier" scope="col">Nama Supplier</th>
                <th name="th_ppn" scope="col">PPN</th>
                <th name="th_jumlah" scope="col">Jumlah</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach='lines' t-as="line">
                <tr>
                  <td>
                    <span t-esc="line_index + 1"/>
                  </td>
                  <td>
                    <span t-esc="line['tanggal_faktur'].strftime('%d/%m/%Y ')"/>
                  </td>
                  <td>
                    <span t-esc="line['no_faktur']"/>
                  </td>
                  <td>
                    <span t-esc="line['customer']"/>
                  </td>
                  <td style = "text-align: right">
                    <span t-esc="line['ppn']" t-options='{"widget": "monetary", "display_currency": currency_id}'/>
                  </td>
                  <td style = "text-align: right">
                    <span t-esc="line['jumlah']" t-options='{"widget": "monetary", "display_currency": currency_id}'/>
                  </td>
                </tr>
              </t>
            </tbody>
            <tfoot>
              <tr>
                <td colspan="4" class="text-center">
                  Total
                </td>
                <td>
                  <span t-esc="total_ppn" t-options='{"widget": "monetary", "display_currency": currency_id}'/>
                </td>
                <td>
                  <span t-esc="total" t-options='{"widget": "monetary", "display_currency": currency_id}'/>
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </t>
  </t>

</template>

</odoo>
