<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_cetakdaftarinvoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div style="text-align: center;">
                        <h3>DAFTAR PENAGIHAN SALES</h3>
                    </div>
                    <div style="text-align:left;">
                        <h4>
                            Tanggal :
                            <!-- <span t-esc="fields.Date.today()" /> -->
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')" />
                        </h4>
                        <h4>
                            Nama :
                            <span t-esc="o.sales_id.name" />
                        </h4>
                    </div>
                    <div name="table">
                        <table class="table table-sm table-bordered" style="width: 100%">
                            <thead class="table-primary">
                                <tr>
                                    <!-- <th name="th_idpelanggan" scope="col">ID PELANGGAN</th> -->
                                    <th name="th_nama" scope="col">NAMA CUSTOMER</th>
                                    <th name="th_golongan" scope="col">KODE INVOICE</th>
                                    <th name="th_tanggal_invoice" scope="col">TANGGAL INVOICE</th>
                                    <th name="th_alamat" scope="col">ALAMAT</th>
                                    <th name="th_total" scope="col">TOTAL</th>
                                    <th name="th_status" scope="col">STATUS</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.invoice_id" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-esc="line.partner_id.name" />
                                        </td>
                                        <td>
                                            <span t-esc="line.name" />
                                        </td>
                                        <td>
                                            <span t-esc="line.invoice_date" />
                                        </td>
                                        <td>
                                            <span t-esc="line.partner_id.street" />
                                            <span t-esc="line.partner_id.street2" />
                                            <span t-esc="line.partner_id.city" />
                                            <span t-esc="line.partner_id.state_id.name" />
                                        </td>
                                        <td>
                                            <span t-esc="line.amount_residual" t-options='{"widget": "monetary", "display_currency": line.currency_id}' />
                                        </td>
                                        <td>
                                            <span t-esc="dict(line.fields_get(allfields=['payment_state'])
                                            ['payment_state']['selection'])[line.payment_state]"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>


                </t>
            </t>
        </t>
    </template>
</odoo>